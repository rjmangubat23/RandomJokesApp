<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/random_joke"
        android:id="@+id/btnRandomJoke"
        android:layout_marginTop="135dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:elegantTextHeight="true"
        android:background="#FFFFBB33"
        android:textColor="#fff"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/name_joke"
        android:id="@+id/btnNameJoke"
        android:layout_below="@+id/btnRandomJoke"
        android:layout_marginTop="5dp"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:elegantTextHeight="true"
        android:background="#FFFFBB33"
        android:textColor="#fff"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/category_joke"
        android:id="@+id/btnCategoryJoke"
        android:layout_below="@+id/btnNameJoke"
        android:layout_marginTop="5dp"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:elegantTextHeight="true"
        android:background="#FFFFBB33"
        android:textColor="#fff"/>

</RelativeLayout>
